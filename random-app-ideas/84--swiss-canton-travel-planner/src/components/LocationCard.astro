---
export interface Props {
	name: string;
	description: string;
	imageUrl: string;
}

const { name, description, imageUrl } = Astro.props;
---

<div class="card">
	<img src={imageUrl} alt={name} />
	<div class="card-content">
		<h2>{name}</h2>
		<p>{description}</p>
	</div>
</div>

<style>
	.card {
		border: 1px solid #ccc;
		border-radius: 8px;
		overflow: hidden;
		margin: 16px;
		max-width: 300px;
	}

	.card img {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}

	.card-content {
		padding: 16px;
	}
</style>
