---
import Layout from '../layouts/Layout.astro';
---

<Layout title="WindWise Léman">
	<main class="flex-grow">
		<section class="py-12">
			<div class="container mx-auto px-4">
				<h1 class="text-4xl font-bold text-center mb-8">WindWise Léman</h1>
				<p class="text-xl text-center mb-12">Hyper-Localized Wind Forecast for Lake Geneva</p>

				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					<!-- Placeholder for wind forecast cards -->
					<div class="bg-white rounded-lg shadow-md p-6">
						<h2 class="text-2xl font-bold mb-4">Location 1</h2>
						<p class="text-lg">Wind Speed: 10 knots</p>
						<p class="text-lg">Direction: NW</p>
					</div>
					<div class="bg-white rounded-lg shadow-md p-6">
						<h2 class="text-2xl font-bold mb-4">Location 2</h2>
						<p class="text-lg">Wind Speed: 12 knots</p>
						<p class="text-lg">Direction: N</p>
					</div>
					<div class="bg-white rounded-lg shadow-md p-6">
						<h2 class="text-2xl font-bold mb-4">Location 3</h2>
						<p class="text-lg">Wind Speed: 8 knots</p>
						<p class="text-lg">Direction: W</p>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>